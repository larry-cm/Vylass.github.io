---
import Start from "@/assets/Start.astro";
import { IconGitHub } from "@/assets/Icons";

interface Props {
    url?: string;
}
const { url } = Astro.props;
---

<a
    href={url || "https://github.com/larry-cm"}
    target="_blank"
    role="button"
    type="button"
    class="animate-fade-in duration-300 bg-neutral-800/80 group-hover/button:bg-neutral-800 rounded p-2 group/button overflow-hidden relative flex justify-center items-center"
>
    <Start
        style="size-6 min-w-6 text-slate-200 group-hover/button:-translate-y-8 transition duration-75 ease-in"
    />
    <IconGitHub
        className="size-6 min-w-6 text-slate-200 translate-y-8 group-hover/button:-translate-y-0 transition duration-75 absolute ease-in"
    />
</a>
