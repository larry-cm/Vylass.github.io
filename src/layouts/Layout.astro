---
import Header from "@components/casa/secciones/Header.astro";
import DialogCierre from "@components/casa/servicios/DialogCierre.astro";

import { ClientRouter } from "astro:transitions";
interface Props {
	title: string;
}
const { title } = Astro.props;
---

<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/svg+xml" href="/logo.svg" />
		<title>{title}</title>
		<meta
			name="description"
			content="esta pagina web va a ser mi primera prueba administrando bases de datos"
		/>

		<ClientRouter />
	</head>
	<body
		id="home"
		class="bg-slate-100 dark:bg-neutral-900 text-slate-900 dark:text-white font-ui"
	>
		<Header />
		<main
			id="main"
			class="p-4 sm:p-8 mx-auto relative h-[calc(90vh-0.5rem)] sm:h-[calc(90vh-2rem)] transition-all overflow-hidden"
		>
			<DialogCierre />
			<slot />
		</main>
	</body>
</html>
