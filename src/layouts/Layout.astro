---
import Header from "@components/casa/Header.astro";
import { ClientRouter } from "astro:transitions";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />

		<link rel="icon" type="image/svg+xml" href="/logo.svg" />
		<title>{title}</title>
		<meta
			name="description"
			content="esta pagina web va a ser mi primera prueba administrando bases de datos"
		/>

		<ClientRouter />
		<script
			is:inline
			src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"
		></script>
	</head>
	<body
		id="home"
		class="bg-slate-100 dark:bg-neutral-900 text-slate-900 dark:text-white"
	>
		<Header />
		<main class="p-8 mx-auto relative z-10">
			<slot />
		</main>
	</body>
</html>
