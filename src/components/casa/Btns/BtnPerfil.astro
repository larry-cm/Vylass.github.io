---
interface Props {
    userName: string;
}
const { userName } = Astro.props;
---

<li
    class="bg-white rounded py-2 px-4 flex items-center gap-2 shadow-lg transition-colors border border-slate-900"
>
    <slot name="before" />
    <p class="text-center text-black font-semibold tracking-wide drop-shadow">
        Bienvenido, <span class="font-bold text-orange-500">{userName}</span>
    </p>
    <slot name="after" />
</li>
