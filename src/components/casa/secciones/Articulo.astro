---
interface Props {
    heading: string;
    id: string | number;
}
const { heading, id } = Astro.props;
---

<article id={`${id}` || "info-user"} class="w-auto p-4 md:p-6">
    <div
        class="w-full p-4 bg-white border rounded h-fit sm:p-6 dark:bg-black/30 border-slate-300 dark:border-slate-200"
    >
        <header class="">
            <h2
                class="pb-4 mr-auto text-xl font-bold text-center sm:text-2xl md:text-4xl sm:pb-8 w-fit"
            >
                {heading || " Datos Personales"}
            </h2>
        </header>
        <slot />
    </div>
</article>
