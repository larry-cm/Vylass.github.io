---
import "@styles/global.css";
import Layout from "@/layouts/Layout.astro";
import FormRegister from "@/components/react/FormRegister";

const sessionIniciada = Astro.cookies.get("sessionIniciada")?.value;
if (sessionIniciada === "true") return Astro.redirect("/");
---

<Layout title="Registro de MySQL || FetchToMySQL">
    <section
        class="flex flex-col items-center justify-center flex-1 min-h-[80vh]"
    >
        <div
            class="h-fit w-full max-w-md rounded-lg shadow-lg p-4 sm:p-8 bg-white dark:bg-[#1a1a1a] border border-orange-400 dark:border-slate-200"
        >
            <header class="mb-6 text-center">
                <h2
                    class="text-2xl font-bold mb-2 text-slate-800 dark:text-white"
                >
                    Crear una cuenta
                </h2>
                <p
                    class="text-slate-600 dark:text-slate-300 font-medium text-sm"
                >
                    Regístrate para acceder a FetchToMySQL
                </p>
            </header>

            <FormRegister client:load />

            <div
                class="mt-6 text-center text-sm text-slate-700 dark:text-slate-200"
            >
                ¿Ya tienes cuenta?
                <a
                    href="/"
                    class="text-orange-500 hover:text-orange-600 underline underline-offset-2 transition-colors"
                    >Inicia sesión</a
                >
            </div>
        </div>
    </section>
</Layout>
